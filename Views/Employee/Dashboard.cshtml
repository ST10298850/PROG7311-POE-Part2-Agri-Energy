@model List<AgriEnergyConnect.Models.Product>

@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="mb-4">Employee Dashboard</h1>

            <h2>All Products</h2>
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Production Date</th>
                            <th>Farm Name</th>
                            <th>Farmer Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@product.Category</td>
                                    <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                                    <td>@(product.Farm?.FarmName ?? "N/A")</td>
                                    <td>@(product.User?.UserName ?? "N/A")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No products available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>