@model List<AgriEnergyConnect.Models.FarmerApplication>


<div class="container mt-4">
    <h1 class="mb-4">Manage Farmer Applications</h1>

    @foreach (var application in Model)
    {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Application ID: @application.ApplicationID</h5>
                <span
                    class="badge @(application.Status == "Pending" ? "bg-warning" : (application.Status == "Approved" ? "bg-success" : "bg-danger"))">
                    @application.Status
                </span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Farm Name:</strong> @application.FarmName</p>
                        <p><strong>Location:</strong> @application.Location</p>
                        <p><strong>Farm Type:</strong> @application.FarmType</p>
                        <p><strong>Full Name:</strong> @application.FullName</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Email:</strong> @application.Email</p>
                        <p><strong>Phone:</strong> @application.Phone</p>
                        <p><strong>Submission Date:</strong> @application.SubmissionDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @if (application.Status == "Pending")
                {
                    <form asp-action="UpdateApplicationStatus" asp-controller="Admin" method="post" class="d-inline">
                        <input type="hidden" name="applicationId" value="@application.ApplicationID" />
                        <button type="submit" name="status" value="Approved" class="btn btn-success me-2">Approve</button>
                        <button type="submit" name="status" value="Rejected" class="btn btn-danger">Reject</button>
                    </form>
                }
                else
                {
                    <p class="mb-0"><strong>Status updated on:</strong> [Display status update date here]</p>
                }
            </div>
        </div>
    }
</div>
