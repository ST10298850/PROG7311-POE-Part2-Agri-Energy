@{
    ViewData["Title"] = "Farmer Application";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap" rel="stylesheet">
</head>

<body>
    <div class="farmer-application-container">
        <div class="farmer-application-header">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                    d="M24 4C12.9543 4 4 12.9543 4 24C4 35.0457 12.9543 44 24 44C35.0457 44 44 35.0457 44 24C44 12.9543 35.0457 4 24 4ZM31 26H26V31H22V26H17V22H22V17H26V22H31V26Z"
                    fill="#404040" />
            </svg>
            <h1>Farmer Application</h1>
            <p>Join our farming community</p>
        </div>
        <form>
            <div class="form-group">
                <label for="farmName">Farm Name</label>
                <input type="text" id="farmName" name="farmName" required>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="province">Province</label>
                    <select id="province" name="province" required>
                        <option value="">Select Province</option>
                        <!-- Add province options here -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <select id="city" name="city" required>
                        <option value="">Select City</option>
                        <!-- Add city options here -->
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="farmType">Type of Farm</label>
                <select id="farmType" name="farmType" required>
                    <option value="">Select Farm Type</option>
                    <option value="Crop Farming">Crop Farming</option>
                    <!-- Add more farm type options here -->
                </select>
            </div>
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" name="fullName" required>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="documents">Documents (Optional)</label>
                <div class="file-upload-area">
                    <div class="file-upload-content">
                        <svg width="38" height="30" viewBox="0 0 38 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M19 0C8.50781 0 0 6.71484 0 15C0 23.2852 8.50781 30 19 30C29.4922 30 38 23.2852 38 15C38 6.71484 29.4922 0 19 0ZM30.0625 16.4062H20.1875V26.25H17.8125V16.4062H7.9375V13.5938H17.8125V3.75H20.1875V13.5938H30.0625V16.4062Z"
                                fill="#A3A3A3" />
                        </svg>
                        <label for="fileUpload" class="file-upload-label">Upload files</label>
                        <input type="file" id="fileUpload" name="documents" multiple style="display: none;">
                        <p class="file-upload-info">PNG, JPG, PDF up to 10MB</p>
                    </div>
                </div>
            </div>
            <div class="terms-checkbox">
                <input type="checkbox" id="terms" name="terms" required>
                <label for="terms">I agree to the terms and conditions</label>
            </div>
            <button type="submit" class="btn-submit">Submit Application</button>
        </form>
    </div>
</body>

</html>